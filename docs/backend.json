{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile information.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user profile."
        },
        "fullName": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "studentId": {
          "type": "string",
          "description": "The user's student ID."
        },
        "hallOfResidence": {
          "type": "string",
          "description": "The user's hall of residence."
        },
        "gender": {
          "type": "string",
          "description": "The user's gender."
        },
        "role": {
          "type": "string",
          "description": "The user's role (e.g., Student, Staffulty, Security, Admin)."
        }
      },
      "required": [
        "id",
        "fullName",
        "email",
        "studentId",
        "hallOfResidence",
        "gender",
        "role"
      ]
    },
    "ClearanceItem": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ClearanceItem",
      "type": "object",
      "description": "Represents an item that needs to be cleared by a user.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the clearance item."
        },
        "userProfileId": {
          "type": "string",
          "description": "Reference to UserProfile."
        },
        "name": {
          "type": "string",
          "description": "The name of the clearance item."
        },
        "department": {
          "type": "string",
          "description": "The department responsible for clearing the item.",
          "enum": ["Academics", "Library", "Sports", "Dormitory", "IT", "Finance"]
        },
        "status": {
          "type": "string",
          "description": "The status of the clearance item.",
          "enum": ["Pending", "Approved", "Rejected"]
        },
        "notes": {
          "type": "string",
          "description": "Notes or comments from the student about the clearance item."
        },
        "rejectionReason": {
            "type": "string",
            "description": "Reason provided by an admin for rejecting an item."
        },
        "price": {
            "type": "number",
            "description": "The cost to be paid for a rejected item."
        },
        "paymentStatus": {
            "type": "string",
            "description": "The payment status for a rejected item.",
            "enum": ["Outstanding", "Paid"]
        }
      },
      "required": [
        "id",
        "userProfileId",
        "name",
        "department",
        "status"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores user profile data, with the userId as the document ID.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier of the user, matching the Firebase Auth UID."
            }
          ]
        }
      },
      {
        "path": "/users/{userId}/clearanceItems/{clearanceItemId}",
        "definition": {
          "entityName": "ClearanceItem",
          "schema": {
            "$ref": "#/backend/entities/ClearanceItem"
          },
          "description": "Stores clearance items associated with a specific user.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier of the user who owns the clearance items."
            },
            {
              "name": "clearanceItemId",
              "description": "The unique identifier for the clearance item."
            }
          ]
        }
      }
    ]
  }
}
