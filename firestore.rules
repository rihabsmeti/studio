/**
 * @file Firebase Security Rules for ExitPass Application
 * @core_philosophy This ruleset enforces a strict user-ownership model for user profiles and their associated clearance items.
 * It also incorporates role-based access control for administrative functions.
 * @data_structure All user data is nested under /users/{userId}, with clearance items further nested under each user's profile.
 *  Admin roles are managed through the /roles_admin/{userId} collection.
 * @key_security_decisions User listing is disabled to protect user privacy.  Admin status is determined by the existence
 * of a document in the /roles_admin/{userId} collection.
 * @denormalization UserProfile documents are required to have an 'id' field that matches the userId in the path, ensuring
 *  path-based authorization is reliable. ClearanceItems denormalize the userProfileId, mirroring the userId parameter.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getRole() {
      // It is critical to check for the existence of the document before accessing .data
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isStaff() {
      let role = getRole();
      return role in ['Admin', 'Security', 'Finance'];
    }

    function isFinance() {
      return getRole() == 'Finance';
    }

    function isAdmin() {
        return getRole() == 'Admin';
    }
    
    match /users/{userId} {
      allow get: if isOwner(userId) || isStaff();
      allow list: if false; // User listing is disabled for privacy.
      
      // Allow create if user is signed in and is the owner of the document.
      // The front-end logic in login-page.tsx handles the role assignment check (e.g., email domain).
      // This rule secures that only the authenticated user can create their own profile document.
      allow create: if isSignedIn() && isOwner(userId);

      // Allow update if the user is the owner and the ID and role don't change.
      // Role changes are disallowed here for security.
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id &&
                       request.resource.data.role == resource.data.role;
      allow delete: if isOwner(userId);
    }
    
    match /users/{userId}/clearanceItems/{clearanceItemId} {
      // Students can create and delete their own items, and list them.
      allow create: if isOwner(userId) && request.resource.data.userProfileId == userId;
      allow delete: if isOwner(userId) && resource.data.status == 'Pending';
      // ANY user can list THEIR OWN items. This is secure and avoids illegal gets in list rules.
      allow list: if isOwner(userId);

      // Staff can read any item (for collectionGroup queries), and owners can read their own.
      allow get: if isOwner(userId) || isStaff();

      // Update permissions are role-based.
      allow update: if 
        // Owners can update their own items if the status is 'Pending'.
        (isOwner(userId) && resource.data.status == 'Pending') ||
        // Admins can update status, rejectionReason, and price.
        (isAdmin() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'rejectionReason', 'price', 'paymentStatus'])) ||
        // Finance can only update the paymentStatus.
        (isFinance() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['paymentStatus']));
    }
  }
}
