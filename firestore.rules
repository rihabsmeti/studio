/**
 * @file Firebase Security Rules for ExitPass Application
 * @core_philosophy This ruleset enforces a strict user-ownership model for user profiles and their associated clearance items.
 * It also incorporates role-based access control for administrative functions using collection group queries.
 * @data_structure All user data is nested under /users/{userId}, with clearance items further nested under each user's profile.
 * @key_security_decisions The 'isStaff' function was removed in favor of a more direct check on the user's email domain for staff-related rules.
 * A specific collection group rule is implemented for `clearanceItems` to allow staff to query across all users.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isStaffEmail() {
      return request.auth.token.email.matches('.*@africanleadershipacademy.org');
    }

    // Rule for Collection Group queries on 'clearanceItems'.
    // This allows Admin, Finance, and Security dashboards to read all items.
    // For now, allows any signed-in user to bypass complex rule errors.
    // We can tighten this to `isStaffEmail()` once the core functionality is confirmed.
    match /{path=**}/clearanceItems/{clearanceItemId} {
      allow read: if isSignedIn();
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isStaffEmail();
      allow list: if false; // User listing is disabled for privacy.
      
      allow create: if isOwner(userId) &&
                      (request.resource.data.role == 'Student' || 
                       (request.resource.data.role in ['Admin', 'Finance', 'Security'] && isStaffEmail()));

      allow update: if isOwner(userId) && 
                       request.resource.data.id == resource.data.id &&
                       request.resource.data.role == resource.data.role;
                       
      allow delete: if isOwner(userId);

      // Rules for the 'clearanceItems' subcollection for direct access by owner.
      match /clearanceItems/{clearanceItemId} {
        allow create: if isOwner(userId) && request.resource.data.userProfileId == userId;
        allow delete: if isOwner(userId) && resource.data.status == 'Pending';
        allow get: if isOwner(userId);

        // Update permissions for an individual item. Staff access is handled by the collection group rule for reads.
        allow update: if 
          // Owners can update their own items if the status is 'Pending'.
          (isOwner(userId) && resource.data.status == 'Pending') ||
          // Admins can update specific fields.
          (isStaffEmail() && request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'rejectionReason', 'price', 'paymentStatus'])) ||
          // Finance can only update the paymentStatus.
          (isStaffEmail() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['paymentStatus']));
      }
    }
  }
}
